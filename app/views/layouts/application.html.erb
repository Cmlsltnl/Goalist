                </ul>
              </li>              
            </ul>
          </div>
          <% end %>       
        </div>
      </div>
    </div>

    <div class="container">
  
      <div class="row">
        <% flash.each do |name, msg| %>
          <div class="alert">
            <%= content_tag :div, msg, :id => "flash_#{name}" %>
          </div>
        <% end %>              
      </div>
      
      <%= yield %>
      
      <% if current_user %>
      <% else %>
      <br/>
      <br/>
      <div  class="row">
        <div class="span5 offset1 zoom">
           <p><img src="http://localhost:3000/assets/GoalsSign.png" class="img-circle"/></p>
