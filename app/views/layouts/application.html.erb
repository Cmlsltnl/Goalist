            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>
         
          <%= link_to "GoaList", root_path, :class => 'brand', :style => 'font-family: Brush Script MT;font-size:25px' %>

          <div class="nav-collapse">
            <ul class="nav">
              <% if current_user %>
              <li><%= link_to "Users", users_path %></li>
              <li><%= link_to "Milestones", posts_path %></li>
              <li><%= link_to "Goals", goals_path %></li>
